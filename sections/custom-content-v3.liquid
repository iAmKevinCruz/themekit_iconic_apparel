<style>
  @media screen and (max-width: 749px) {
    .custom-grid{
      display: grid;
      grid-template-columns: repeat(2,1fr);
      grid-auto-rows: minmax(250px, auto);
      gap: 10px;
      width: 95vw;
      margin: auto;
    }
    .product_one{
      grid-column: 1;
    }
    .product_two{
      grid-column: 2;
    }
    .image_text{
      margin: 0;
      width: 100%;
      padding: 0;
      grid-column: 1/3;
      grid-row: 1/3;
    }
    .product_stacked{
      margin: 0;
      width: 100%;
      grid-column: 1/3;
      padding: 0;
    }
    .grid-product_stacked{
      display: grid;
      grid-template-columns: repeat(2,1fr);
      gap: 10px;
    }
  }
</style>
<div class="page-width">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h4 class="h2">{{ section.settings.title | escape }}</h4>
    </div>
  {% endif %}

  <div class="custom-content custom-grid">
    {%- assign block_width_mobile = '' -%}

    {% for block in section.blocks %}
      {% case block.settings.width %}
        {% when '25%' %}
          {%- assign max_height = 250 -%}
          {%- assign block_width = 'medium-up--one-quarter' -%}
          {%- assign block_width_mobile = 'small--one-half' -%}
        {% when '33%' %}
          {%- assign max_height = 345 -%}
          {%- assign block_width = 'medium-up--one-third' -%}
          {%- assign block_width_mobile = 'small--one-half' -%}
        {% when '50%' %}
          {%- assign max_height = 530 -%}
          {%- assign block_width = 'medium-up--one-half' -%}
          {%- assign block_width_mobile = 'small--one-half' -%}
        {% when '66%' %}
          {%- assign max_height = 720 -%}
          {%- assign block_width = 'two-thirds' -%}
        {% when '75%' %}
          {%- assign max_height = 810 -%}
          {%- assign block_width = 'three-quarters' -%}
        {% when '100%' %}
          {%- assign max_height = 1090 -%}
          {%- assign block_width = 'one-whole' -%}
      {% endcase %}


      <div class="custom__item custom__item--{{ block.type }} {{ block.type }} custom__item--{{ block.id }} {{ block_width }}" {{ block.shopify_attributes }}>
        <div class="custom__item-inner custom__item-inner--{{ block.type }} grid-{{ block.type }}">
            {% case block.type %}

              {% when 'image_text' %}
                {% if block.settings.image != blank %}
                {%- assign img_url_text = block.settings.image | img_url: 'master' -%}
                {% assign set = block.settings %}
                  <div style="background-image: url('{{ img_url_text }}');" class="image-text">
                    <span class="image-heading">{{ set.text_in_image }}</span>
                    <a href="{{ set.image_link }}">{{ set.image_link_label }}</a>
                  </div>
                  <style>
                    .image-heading{
                      margin-bottom: {{ set.text_in_image_margin_bottom }}px;
                    }
                    .image-heading p{
                      font-size: {{ set.text_in_image_size }}px;
                      letter-spacing: {{ set.text_in_image_letter_spacing }}px;
                      line-height: {{ set.text_in_image_line_height }}px;
                      color: {{ set.text_in_image_color }};
                    }
                    .image-text {
                      display: flex;
                      flex-direction: column;
                      justify-content: end;
                      padding: 5%;
                      color: white;
                      background-repeat: no-repeat;
                      background-position: center;
                      background-size: cover;
                      height: 100%;
                    }
                    .image-text a {
                      color: white;
                      text-decoration: underline;
                    }
                    .custom__item-inner--image_text {
                      height: 100%;
                    }
                  </style>
                {% endif %}

              {% when 'product_stacked' %}
              {%- assign product_one = all_products[block.settings.product_one] -%}
              {%- assign product_two = all_products[block.settings.product_two] -%}
                <div class="product-one">
                  {% include 'product-card-grid', max-height: max_height, product: product_one %}
                </div>
                <div class="product-two">
                  {% include 'product-card-grid', max-height: max_height, product: product_two %}
                </div>

            {% endcase %}
          </div>
        </div>
      {% endfor %}
  </div>

</div>



